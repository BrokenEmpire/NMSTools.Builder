                <ResourceDictionary Source="pack://application:,,,/NMSTools.Builder;component/Themes/ResizeGrip.xaml" />
                <ResourceDictionary Source="pack://application:,,,/NMSTools.Builder;component/Themes/Slider.xaml" />
