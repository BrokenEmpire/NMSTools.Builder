                <ResourceDictionary Source="pack://application:,,,/NMSTools.Builder;component/Themes/ToolTip.xaml" />
                <ResourceDictionary Source="pack://application:,,,/NMSTools.Builder;component/Themes/TextBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/NMSTools.Builder;component/Themes/CheckBox.xaml" />
